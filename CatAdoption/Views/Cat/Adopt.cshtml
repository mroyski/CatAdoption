@model CatAdoption.Models.Cat

@{
    ViewData["Title"] = "Adopt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Would you like to adopt @Model.Name?</h3>

<div class="text-center">
    <hr />
    <h5>@Model.Gender</h5>
    <h5>@Model.Age</h5>
    <p>@Model.Bio</p>
    <a asp-action="AdoptSuccess" asp-route-id="@Model.CatId">Adopt</a> |
        <a asp-action="Index">Back to List</a>
</div>
